<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerUserAccounts"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_back_user_accounts"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:src="@drawable/back_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/img_add_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img_back_user_accounts"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:src="@drawable/add_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_back_user_accounts"></ImageView>

    <TextView
        android:id="@+id/txt_userlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_add_user"

        android:layout_marginTop="20dp"
        android:text="User list"
        app:layout_constraintTop_toBottomOf="@+id/img_add_user"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_userlist"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_userlist"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="horizontal">
    </LinearLayout>

    <ListView
        android:id="@+id/list_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_userlist">


    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>