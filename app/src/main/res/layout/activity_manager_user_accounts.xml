<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerUserAccounts"
    android:orientation="vertical"
    android:padding="25dp">

    <ImageView
        android:id="@+id/img_back_user_accounts"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Accounts"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/img_back_user_accounts"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"/>

    <Button
        android:id="@+id/img_add_user"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:text="Add User Account"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <TextView
        android:id="@+id/txt_userlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_add_user"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:text="User list"
        app:layout_constraintTop_toBottomOf="@+id/img_add_user"
        tools:layout_editor_absoluteX="0dp"/>

    <ListView
        android:id="@+id/list_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="155dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_userlist"/>

</androidx.constraintlayout.widget.ConstraintLayout>