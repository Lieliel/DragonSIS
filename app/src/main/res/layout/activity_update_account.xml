<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAccount"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_upd_acc_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"></TextView>

    <EditText
        android:id="@+id/edit_upd_acc_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sample Username"></EditText>

    <TextView
        android:id="@+id/txt_upd_acc_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        ></TextView>

    <EditText
        android:id="@+id/edit_upd_acc_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sample Password"
        ></EditText>

    <TextView
        android:id="@+id/txt_upd_acc_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        ></TextView>

    <EditText
        android:id="@+id/edit_upd_acc_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sample Email"
        ></EditText>

    <TextView
        android:id="@+id/txt_upd_acc_usertype_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type:"
        ></TextView>

    <Spinner
        android:id="@+id/spin_upd_acc_usertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Sample User Type"
        ></Spinner>

    <Button
        android:id="@+id/btn_upd_acc_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        ></Button>

    <Button
        android:id="@+id/btn_upd_acc_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove"
        ></Button>

</LinearLayout>