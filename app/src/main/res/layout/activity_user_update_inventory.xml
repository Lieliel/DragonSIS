<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUpdateInventory"
    android:padding="25dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/img_man_upd_inv_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        android:background="?android:attr/selectableItemBackground"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Inventory"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/img_man_upd_inv_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:clipToPadding="false">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clipToPadding="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/near_gray">

                        <TextView
                            android:id="@+id/txt_man_upd_inv_id_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Inventory ID:"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txt_man_upd_inv_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Sample ID"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/near_gray">

                        <TextView
                            android:id="@+id/txt_man_upd_inv_prod_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Product Name:"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txt_man_upd_inv_prod_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Product Name"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:clipToPadding="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/near_gray">

                        <TextView
                            android:id="@+id/txt_man_upd_inv_quantity_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Quantity:"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txt_man_upd_inv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Quantity"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/near_gray">

                        <TextView
                            android:id="@+id/txt_man_upd_inv_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Date Added:"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/txt_man_upd_inv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Date Added"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_man_upd_inv_quantity_change_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:text="Enter Quantity Change of this product:"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/edit_man_upd_inv_quantity_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter Quantity"
                android:inputType="number"/>

            <RadioGroup
                android:id="@+id/radiogr_man_upd_inv_action"
                android:layout_width="337dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radiobtn_man_upd_inv_add"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Add" />

                <RadioButton
                    android:id="@+id/radiobtn_man_upd_inv_sold"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Sold" />

                <RadioButton
                    android:id="@+id/radiobtn_man_upd_inv_remove"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Remove" />
            </RadioGroup>

            <EditText
                android:id="@+id/edit_man_upd_inv_remarks"
                android:layout_width="321dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:hint="Add Remarks or Comments"
                android:inputType="textMultiLine"/>

            <Button
                android:id="@+id/btn_man_upd_inv_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Update Item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_man_upd_inv_remarks"
                android:backgroundTint="@color/bud_green"
                android:textColor="@color/white"
                style="@style/DSISButton"/>

            <Button
                android:id="@+id/btn_man_upd_inv_delete"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="Delete item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_man_upd_inv_update"
                app:layout_constraintTop_toBottomOf="@+id/edit_man_upd_inv_remarks"
                android:backgroundTint="@color/fiery_rose"
                android:textColor="@color/white"
                style="@style/DSISButton"/>
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>