<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerMenu"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_inventory"
        android:layout_width="205dp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:text="@string/menu_inventory_btn"></Button>

    <Button
        android:id="@+id/btn_viewinvupd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:text="@string/view_invupdates"
        android:layout_marginBottom="25dp">
    </Button>

    <Button
        android:id="@+id/btn_products"
        android:layout_width="206dp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:text="@string/view_productlist"></Button>



    <Button
        android:id="@+id/btn_useraccounts"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:text="@string/menu_useracc_btn"
        android:textColor="@color/white"></Button>

    <Button
        android:id="@+id/btn_man_trans"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:text="@string/manage_transac"
        android:textColor="@color/white"></Button>

    <Button
        android:id="@+id/btn_pdf"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button"
        android:text="@string/menu_pdf_btn"
        android:textColor="@color/white"></Button>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:text="@string/menu_logout_btn"
        ></Button>

</LinearLayout>