<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerMenu"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_inventory"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:text="@string/menu_inventory_btn"/>

        <Button
            android:id="@+id/btn_viewinvupd"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/view_invupdates"/>

        <Button
            android:id="@+id/btn_products"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/view_productlist"/>

        <Button
            android:id="@+id/btn_useraccounts"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/menu_useracc_btn"/>

        <Button
            android:id="@+id/btn_man_trans"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/view_sales"/>

        <Button
            android:id="@+id/btn_pdf"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/menu_pdf_btn"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:text="@string/menu_logout_btn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>