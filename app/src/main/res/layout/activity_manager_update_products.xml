<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerUpdateProducts">

    <ImageView
        android:id="@+id/img_back_upd_products"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:clickable="true"

        android:src="@drawable/back_img"></ImageView>

    <TextView
        android:id="@+id/txt_upd_prod_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="Product ID: ##"

        ></TextView>

    <TextView
        android:id="@+id/txt_upd_prod_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"

        android:layout_below="@+id/txt_upd_prod_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></TextView>

    <EditText
        android:id="@+id/edit_upd_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_upd_prod_name_label"

        android:layout_centerHorizontal="true"
        android:hint="Sample prod Name"></EditText>

    <TextView
        android:id="@+id/txt_upd_prod_total_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Total Quantity"

        android:layout_below="@+id/edit_upd_prod_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></TextView>

    <TextView
        android:id="@+id/txt_upd_prod_total_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_upd_prod_total_quantity_label"

        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="0"></TextView>

    <TextView
        android:id="@+id/txt_upd_prod_critnum_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Critical Number"

        android:layout_below="@+id/txt_upd_prod_total_quantity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></TextView>

    <EditText
        android:id="@+id/edit_upd_prod_critnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:layout_below="@id/txt_upd_prod_critnum_label"
        android:layout_centerHorizontal="true"
        android:hint="Sample Crit number"></EditText>

    <TextView
        android:id="@+id/txt_upd_prod_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_upd_prod_critnum"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Product price"></TextView>

    <EditText
        android:id="@+id/edit_upd_prod_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_upd_prod_price_label"

        android:layout_centerHorizontal="true"
        android:hint="Sample price"
        android:inputType="number"></EditText>

    <TextView
        android:id="@+id/txt_upd_prod_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_upd_prod_price"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Product Category"></TextView>

    <Spinner
        android:id="@+id/spin_upd_prod_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt_upd_prod_category_label"></Spinner>

    <Button
        android:id="@+id/btn_upd_prod_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spin_upd_prod_category"
        android:text="Update"></Button>

    <Button
        android:id="@+id/btn_upd_prod_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_upd_prod_update"
        android:text="Remove"></Button>
</RelativeLayout>