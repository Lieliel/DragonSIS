<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerUpdateProducts"
    android:padding="25dp">

    <ImageView
        android:id="@+id/img_back_upd_products"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Product"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/img_back_upd_products"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_upd_prod_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Product ID: ##" />

            <TextView
                android:id="@+id/txt_upd_prod_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="Product Name" />

            <EditText
                android:id="@+id/edit_upd_prod_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="Sample prod Name" />

            <TextView
                android:id="@+id/txt_upd_prod_total_quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="Product Total Quantity" />

            <EditText
                android:id="@+id/edit_upd_prod_total_quantity"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="Sample prod total quatity" />

            <TextView
                android:id="@+id/txt_upd_prod_critnum_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="Product Critical Number" />

            <EditText
                android:id="@+id/edit_upd_prod_critnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Sample Crit number"
                android:inputType="number" />

            <TextView
                android:id="@+id/txt_upd_prod_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="Product price" />

            <EditText
                android:id="@+id/edit_upd_prod_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Sample price"
                android:inputType="number" />

            <TextView
                android:id="@+id/txt_upd_prod_category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:text="Product Category" />

            <Spinner
                android:id="@+id/spin_upd_prod_category"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/btn_upd_prod_update"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:text="Update" />

            <Button
                android:id="@+id/btn_upd_prod_remove"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:text="Remove" />
        </TableLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>